{
    "name": "ruudk/payment-stripe-bundle",
    "type": "symfony-bundle",
    "description": "A Symfony2 Bundle that provides access to the Stripe API. Based on JMSPaymentCoreBundle.",
    "keywords": ["payment", "stripe"],
    "homepage": "https://github.com/ruudk/PaymentStripeBundle",
    "license": "Apache2",
    "authors": [
        {
            "name": "Ruud Kamphuis",
            "email": "ruudk@mphuis.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/framework-bundle": "~2.0",
        "jms/payment-core-bundle": "~1.0",
        "omnipay/stripe": "dev-feature/stripe-connect-support",
        "psr/log": "~1.0"
    },
	"autoload": {
        "psr-4": { "Ruudk\\Payment\\StripeBundle\\": "src" }
    }
}
